@model MgMarmore.Site.ViewModels.ModeloBancadaViewModel

@{
    ViewData["Title"] = "Details";
}


    <form typeof="post" id="form">
       
        <div class="form-group" hidden>           
            <input class="form-control input-sm" id="idBancada" type="text" value="@Model.Id">
        </div>
        
 

        <img src="~/imagens/@Model.Imagem" class="card-img-top" alt="..." style="width: 100%; height: 200px;">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="inputsm">Frontao</label>
                    <input class="form-control input-sm" id="frontao" type="text" value="0">
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="inputsm">Saia</label>
                    <input class="form-control input-sm" id="saia" type="text">
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            @for (var t = 1; t < Model.QuantidadePecas + 1; t++)
            {
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="inputsm">Larg. @t</label>
                        <input class="form-control input-sm" id="largura-@t" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="inputsm">Comp. @t</label>
                        <input class="form-control input-sm" id="comprimento-@t" type="text">
                    </div>
                </div>
            }
        </div>
        <input type="submit" />
    </form>

<div class="row">

    <a asp-action="Index">Voltar</a>
    <a href="#" class="btn btn-outline-secondary" id="adicionar">Adicionar</a>
    <a href="#" class="btn btn-outline-secondary">Continuar</a>
</div>






<h1>Details</h1>

<div>
    <h4>ModeloViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Metodo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Metodo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagem)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadePecas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantidadePecas)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
