                @Html.DisplayFor(modelItem => item.Imagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantidadePecas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetroQuadrado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
